<h1>予約フォーム</h1>

<ol class="nav">
	<li class="current">1.入力</li>
	<li>2.確認</li>
	<li>3.完了</li>
</ol>

<%= form_for @reserve, method: :post, url: reserve_confirm_path do |form| %>
	<dl>
		<dt>希望日</dt>
		<dd><%= form.text_field :reserve_date %></dd>
		<dt>名前</dt>
		<dd><%= form.text_field :name %></dd>
		<dt>備考</dt>
		<dd><%= form.text_field :note %></dd>
	</dl>

	<%= form.submit '確認画面へ' %>
<% end %>